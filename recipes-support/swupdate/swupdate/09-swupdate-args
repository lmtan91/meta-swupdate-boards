rootfs=`swupdate -g`

if [ $rootfs == '/dev/mmcblk0p2' ];then
	selection="-e stable,copy2"
else
	selection="-e stable,copy1"
fi

state=`fw_printenv ustate | cut -f 2 -d'='`
if [ $state == 1 ];then
	SWUPDATE_SURICATTA_ARGS="-c 2"
else
	SWUPDATE_SURICATTA_ARGS=" "
fi

if [ -d /data ]; then
	if [ ! -f /data/swupdate.cfg ]; then
		cp /etc/swupdate.cfg /data
	fi
fi

if [ -f /data/swupdate.cfg ]; then
	SWUPDATE_ARGS="-H beaglebone:1.0 ${selection} -f /data/swupdate.cfg"
else
	SWUPDATE_ARGS="-H beaglebone:1.0 ${selection} -f /etc/swupdate.cfg"
fi
